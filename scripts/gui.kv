# File: gui.py
#:kivy 2.0.0

<Simulation>
    canvas.before:
        Color:
            rgba: 0, 1, 0, 1

<MainLayout>
    FloatLayout:
        size: root.width, root.height
        FileChooserListView:
            id: filechooser
            size_hint: 1, 1
            path: 'profiles'
            filters: ['*.pkl']
            on_submit: root.sim.load_file(self, filechooser.selection)
        Simulation:
            id: sim
            size_hint: 1, 1
        Label:
            id: epoch
            font_name: 'materials/Aquarius-RegularMono.ttf'
            color: 0, 1, 0, 1
            pos_hint: {'x':0, 'y':0.4}
            font_size: '10sp'
        Label:
            id: n_bodies
            font_name: 'materials/Aquarius-RegularMono.ttf'
            color: 0, 1, 0, 1
            pos_hint: {'x':0, 'y':0.37}
            font_size: '10sp'
        Label:
            id: help
            font_name: 'materials/Aquarius-RegularMono.ttf'
            color: 0, 1, 0, 0
            pos_hint: {'x':0, 'y':-0.30}
            font_size: '10sp'
        Label:
            id: speed
            font_name: 'materials/Aquarius-RegularMono.ttf'
            color: 0, 1, 0, 1
            pos_hint: {'x':0.45, 'y':0.45}
            font_size: '10sp'