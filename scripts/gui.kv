# File: gui.py
#:kivy 2.0.0

<Simulation>
    canvas.before:
        Color:
            rgba: 0, 1, 0, 1

<MainLayout>
    FloatLayout:
        size: root.width, root.height
        Simulation:
            id: sim
        Label:
            id: epoch
            font_name: 'materials/Aquarius-RegularMono.ttf'
            color: 0, 1, 0, 1
            pos_hint: {'x':0, 'y':0.4}
            text: 'Epochs: ???'
            font_size: '10sp'
        Label:
            id: n_bodies
            font_name: 'materials/Aquarius-RegularMono.ttf'
            color: 0, 1, 0, 1
            pos_hint: {'x':0, 'y':0.37}
            text: 'N-Bodies: ???'
            font_size: '10sp'
        Label:
            id: help
            font_name: 'materials/Aquarius-RegularMono.ttf'
            color: 0, 1, 0, 1
            pos_hint: {'x':0, 'y':-0.30}
            font_size: '10sp'