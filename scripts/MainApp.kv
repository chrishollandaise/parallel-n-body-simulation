#:import utils kivy.utils

MainBoxLayout:

<MainBoxLayout>:
    orientation: "vertical"
    Button:
        text: "Import"
        background_normal: ''
        background_color: utils.get_color_from_hex('#d91e18')
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": 0.5}
    MainCanvas:
        border: (10,10,10,10)
    Button:
        text: "Run"
        background_normal: ''
        background_color: utils.get_color_from_hex('#3fc380')
        size_hint: 0.25, 0.25
        pos_hint: {"center_x": 0.5}